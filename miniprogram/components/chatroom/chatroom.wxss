@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
.header{
  position: fixed;
  box-sizing:border-box;
  width:100%;
  height:50px;
  background:white;
  border-bottom: 1px solid #ddd;
  padding: 20rpx 0 30rpx;
  font-size: 36rpx;
  text-align: center;
}

.text-content {
  border: 1px solid transparent;
  border-radius: 3px;
  margin: 2px 0 0 0;
  padding: 4px 10px;
  /* font-size: 30rpx; */
  display: inline-block;
}

.text-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  max-width: 80%;
}

.footer {
  box-sizing:border-box;
  width:100%;
  height:50px;
  bottom:0px;
  position: fixed;
  flex-basis: fit-content;
  display: flex;
  flex-direction: row;
  border-top: 1px solid #ddd;
  font-size: 10rpx;
  padding: 20rpx 30rpx;
  background: rgb(246,246,246);
}

.footer .message-sender {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.message-sender .text-input {
  flex: 1;
  font-size: 16px;
  border: 1px solid transparent;
  border-radius: 5px;
  padding: 3px 6px;
  margin: 0 10px 0 5px;
  background: #fff;
}

.message-sender .btn-send-image {
  width: 50rpx;
  height: 50rpx;
  align-self: center;
}

button {
  font-size: 30rpx;
}

button.userinfo {
  background: darkturquoise;
  color: aliceblue;
  padding: 0 100rpx;
  border: 1px solid #ddd;
  border-radius: 20px;
}

.send-post{
  height: fit-content;
  padding:10px;
  background:#ECEFF1;
  border-radius: 5px;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.post-text{
  padding:4px;
  width:80px;
}

.goBottom{
  padding:15rpx;
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 60px;
  background: #C5E1A5;
  right: 30rpx;
  border-radius: 50%;
}