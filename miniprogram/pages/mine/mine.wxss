/* pages/mine/mine.wxss */
.background {
  height: 170px;
  background: #C5E1A5;
}

.head {
  display: flex;
  flex-direction: column;
  height: 140px;
  justify-content: center;
}

.userinfo {
  display: flex;
  align-items: center;
  flex-direction: column;
   width: 100%; 
  height: 300rpx;
  justify-content: center;
}
.userinfo-btn{
  margin-top: 50rpx;
  background-color: #11c562;
  color: #fff;
  width: 70%;
  border-radius: 40rpx;
  font-size: 40rpx;
}
.userinfo-block {
  display: flex;

  justify-content: center;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 0rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: rgb(15, 15, 15);
  margin: 20rpx;
}
.button_feedback{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 50px;
  align-items: center;
  position: absolute;
  padding-left:10px;
  padding-right:5px;
  font-size:16px
  
  
}


.userinfo-block-complete {
  font-size: 35rpx;
  color: rgb(235, 163, 8);
  border:1px solid rgb(235, 163, 8);
  border-radius: 8%;
  background-size: cover;
  text-align: left;
  padding-left: 4px;
  padding-right: 4px;
}

.headIcon {
  display: flex;
  justify-content: center;
}
.complete_messege {
  display: flex;
  justify-content: center;
  padding-top: 6px;
}

.login {
  display: flex;
  font-size: 30px;
  margin-top: 10rpx;
  justify-content: center;
}

.button {
  margin: 10px;
  font-size: 14px;
}

.head image {
  border-radius: 50%;
}

.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.navigator {
  width: 100%;
}

.item {
  display: flex;
  flex-direction: row;
  height:50px;
}
.title{
  font-size:16px;
  font-weight: bold;
  padding-left: 10px;
}


.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
.kind{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  
}
.kind image {
  position: absolute;
  right: 10px;
  width: 32rpx;
  height: 32rpx;
}
.kindlist_box {
  position: relative;
  width: 100%;
  top: 10rpx;
  left: 0rpx;
  padding-left: 15px;
  padding-bottom: 5px;
  border-bottom: 1rpx solid #eee;
}
.list{
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.content{
  top: 5px;
}
.theme{
  padding-bottom: 5px;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}
