<wxs src="../../common.wxs" module="morejs" />
<view class="top_contain">
      <view class="search_box">
            <image src="/images/search.png"></image>
            <input bindinput="keyInput" bindconfirm="search" placeholder="输入您感兴趣的内容"></input>
      </view>
      <view class="search" bindtap="search">搜索</view>
</view>

<view class="contain">
      <block wx:if="{{list.length==0}}">
            <block wx:if="{{!blank}}">
                  <view class="a">
                        <view>搜索历史</view>
                  </view>
                  <block wx:if="{{hislist.length==0}}">
                        <view class="nosearch">您还没搜索过哟，赶快试试吧</view>
                  </block>
                  <block wx:if="{{hislist.length>0}}">
                        <block wx:for="{{hislist}}" wx:key="*this">
                              <view bindtap="choosekey" data-key="{{item}}" class="hisitem">{{index+1}}. {{item}}</view>
                        </block>
                  </block>

                  <block wx:if="{{blank}}">
                  <view class="a">
                        <view>搜索结果</view>
                  </view>
                  <!--无内容显示-->
                  <view class="nocontent">
                        <view class="blank_text">暂无{{key}}相关书籍哟~</view>
                  </view>
                  </block>

            </block>
      </block>
</view>

<block wx:if="{{list.length>0}}">
            <view class="a">
                  <view>搜索结果</view>
            </view>
            <block wx:for="{{list}}" wx:key="_id">
                  <view class="list_box" bindtap="detail" data-id="{{item._id}}">
                        <!-- <image class="list_poster" src="{{item.imageList[0]}}"/> -->
                        <image class="list_poster" src="{{item.images_fileID[0]}}"></image>                       
                        <view class="list_content">
                              <view class="list_word">
                                    <view class="list_title text-cut">{{item.name}}
                                    </view>
                                    <view class="list_author text-cut">
                                          {{multiArray[item.multiIndex[0]].name}}
                                          {{multiArray[item.multiIndex[0]].citys.length > 0 ?(" " + multiArray[item.multiIndex[0]].citys[item.multiIndex[1]].name):""}}
                                     </view>
                                    <view class="list_author text-cut">{{item.thing}}
                                    </view>
                              </view>
                              <view class="list_between">
                                    <view class="list_price">￥{{item.price}}.00元</view>
                                    <view class="list_time">{{morejs.timelog(item.creat)}}发布
                                    </view>
                              </view>
                        </view>
                  </view>
            </block>
      </block>